{% extends 'layout.html.twig' %}


{% block content %}

<div class="container-fluid">
    <div class="pillars"><img src="/assets/images/greek-pillars.png/"><h1 class="text-center py-5">All Cocktails</h1><img src="/assets/images/greek-pillars.png/"></div>
    <div class="row">
        {% for cocktail in cocktails.drinks %}
            <div class="col-12 col-lg-3">
                <div class="card" style="width 10rem;">
                    <img src="{{ cocktail.strDrinkThumb }}" class="card-img-top" alt="{{ cocktail.strDrink }}">
                    <div class="card-body">
                        <h5 class="card-title text-truncate">{{ cocktail.strDrink }}</h5>

                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
